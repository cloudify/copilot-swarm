{
  "name": "copilot-neural-swarm",
  "version": "2.0.0",
  "type": "module",
  "description": "AI Clone Command Interface - Monitor GitHub Copilot Neural Swarm Activity",
  "main": "dist/index.js",
  "bin": {
    "copilot-monitor": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:enhanced": "npx tailwindcss -i ./src/styles/crt.css -o ./dist/public/enhanced.css --watch",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:enhanced": "npm run build:enhanced & npm run dev",
    "dev:verbose": "DEBUG=true NODE_ENV=development tsx src/index.ts",
    "debug": "npm run build && DEBUG=true NODE_ENV=development node debug.js",
    "debug-search": "DEBUG=true tsx debug-search.ts",
    "demo": "open enhanced-ui-demo.html",
    "lint": "eslint src --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:format": "npm run lint && npm run format",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "github",
    "copilot",
    "pr",
    "monitor",
    "web",
    "dashboard"
  ],
  "author": "Federico Feroldi",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-react": "^7.27.1",
    "@babel/register": "^7.27.1",
    "@emotion/is-prop-valid": "^1.2.1",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "conf": "^10.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "framer-motion": "^12.16.0",
    "gsap": "^3.12.2",
    "open": "^10.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.3.6"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/express": "^5.0.2",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.0",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0"
  }
}
